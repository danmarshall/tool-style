---
import logo from './dans_tools.svg';
import './styles/base.css';
import './styles/header.css';
import './styles/sidebar.css';
import './styles/main.css';
import './styles/footer.css';
import './styles/container.css';
import './styles/ads.css';
import './styles/mobile.css';
import './styles/controls.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans:wght@700&family=Open+Sans:wght@400;600&family=IBM+Plex+Sans:wght@600&family=IBM+Plex+Mono&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest" defer></script>
</head>
<body>
    <header>
        <div class="header-left">
            <a href="/" class="logo"><img src={logo.src} alt="Logo" /></a>
            <h1>{title}</h1>
        </div>
        <nav>
            <!-- <button type="button" id="toolsToggle">Other Tools â–¾</button> -->
            <a id="buy-coffee" href="https://buymeacoffee.com/danmarshall" target="_blank" title="Buy me a coffee"><i data-lucide="coffee"></i></a>
            <!-- <ul id="toolsList">
                <li><a href="/tool1.html">Tool 1</a></li>
                <li><a href="/tool2.html">Tool 2</a></li>
                <li><a href="/tool3.html">Tool 3</a></li>
                <li><a href="/tool4.html">Tool 4</a></li>
            </ul> -->
        </nav>
    </header>
    
    <div class="container">
        <slot name="content" />

        <aside id="ads-right">
            <div class="ad-label">Advertisement</div>
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9656548229423934"
                crossorigin="anonymous"></script>
            <!-- vertical -->
            <ins class="adsbygoogle"
                style="display:inline-block;width:160px;height:600px"
                data-ad-client="ca-pub-9656548229423934"
                data-ad-slot="8489021387"></ins>
            <script is:inline>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </aside>
    </div>
    
    <div id="tablet-bottom-ad">
        <div class="ad-label">Advertisement</div>
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9656548229423934"
            crossorigin="anonymous"></script>
        <!-- Horizontal -->
        <ins class="adsbygoogle"
            style="display:inline-block;width:728px;height:90px"
            data-ad-client="ca-pub-9656548229423934"
            data-ad-slot="5123336647"></ins>
        <script is:inline>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

    <slot name="footer_content" />
    
    <footer>
        Check out Dan's other libraries at <a href="https://danmarshall.github.io/" target="_blank">https://danmarshall.github.io/</a>
    </footer>
    
    <script>
        import './scripts/template';
    </script>

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9656548229423934"
     crossorigin="anonymous"></script>
</body>
</html>
