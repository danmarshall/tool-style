---
import logo from './dans_tools.svg';
import './styles/base.css';
import './styles/header.css';
import './styles/sidebar.css';
import './styles/main.css';
import './styles/footer.css';
import './styles/container.css';
import './styles/ads.css';
import './styles/mobile.css';

export interface Props {
  title: string;
  backgroundImage?: string;
  backgroundImageStyle?: {
    backgroundSize?: string;
    backgroundPosition?: string;
    opacity?: number;
  };
}

const { 
  title,
  backgroundImage,
  backgroundImageStyle = {
    backgroundSize: '750px',
    backgroundPosition: '0px -22px',
    opacity: 0.3
  }
} = Astro.props;

const bgStyle = backgroundImage 
  ? `background-image: url('${backgroundImage}'); background-size: ${backgroundImageStyle.backgroundSize}; background-position: ${backgroundImageStyle.backgroundPosition}; opacity: ${backgroundImageStyle.opacity};`
  : '';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans:wght@700&family=Open+Sans:wght@400;600&family=IBM+Plex+Sans:wght@600&family=IBM+Plex+Mono&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest" defer></script>
</head>
<body>
    <header>
        {backgroundImage && <div class="header-bg" style={bgStyle}></div>}
        <div class="header-left">
            <a href="/" class="logo"><img src={logo.src} alt="Logo" width="40" height="40" /></a>
            <h1>{title}</h1>
        </div>
        <nav>
            <button type="button" id="toolsToggle">Other Tools â–¾</button>
            <button type="button" id="themeToggle" title="Toggle theme"><i data-lucide="moon"></i></button>
            <a id="buy-coffee" href="https://buymeacoffee.com/danmarshall" target="_blank" title="Buy me a coffee"><i data-lucide="coffee"></i></a>
            <ul id="toolsList">
                <li><a href="/tool1.html">Tool 1</a></li>
                <li><a href="/tool2.html">Tool 2</a></li>
                <li><a href="/tool3.html">Tool 3</a></li>
                <li><a href="/tool4.html">Tool 4</a></li>
            </ul>
        </nav>
    </header>
    
    <div class="container">
        <aside>
            <slot name="sidebar" />
        </aside>
        
        <main>
            <slot name="main" />
        </main>

        <aside id="ads-right">
            <div class="ad-label">Advertisement</div>
            <div style="width: 160px; height: 600px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; color: #999;">Ad Space</div>
        </aside>
    </div>
    
    <div id="tablet-bottom-ad">
        <div class="ad-label">Advertisement</div>
        <div style="width: 728px; height: 90px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; color: #999; margin: 0 auto;">Ad Space</div>
    </div>
    
    <footer>
        &copy; 2026 Tool Name | <a href="/privacy">Privacy</a> | <a href="/terms">Terms</a>
    </footer>
    
    <script is:inline>
        // Wait for DOM and lucide to load
        window.addEventListener('DOMContentLoaded', () => {
            // Poll for lucide availability
            const initLucide = () => {
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                } else {
                    setTimeout(initLucide, 50);
                }
            };
            initLucide();
        });

        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        const savedTheme = localStorage.getItem('theme');

        if (savedTheme === 'dark') {
            body.classList.add('dark-mode');
        }

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            const isDark = body.classList.contains('dark-mode');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            
            // Update icon
            const icon = themeToggle.querySelector('[data-lucide]');
            icon.setAttribute('data-lucide', isDark ? 'sun' : 'moon');
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });

        // Tools menu toggle
        const toggle = document.getElementById('toolsToggle');
        const list = document.getElementById('toolsList');

        toggle.addEventListener('click', () => {
            list.classList.toggle('open');
        });

        document.addEventListener('click', (e) => {
            if (!toggle.contains(e.target) && !list.contains(e.target)) {
                list.classList.remove('open');
            }
        });
    </script>
</body>
</html>
